#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'

includex "**.sh"

function shelob() {
  if [[ -z ${1:-} ]]; then
    echo "Missing command"
    echo "Usage: shelob <command> [<args>]"
  else
    "$1"
  fi
}

if [[ ${BASH_SOURCE[0]} != "$0" ]]; then
  export -f shelob
else
  shelob "${@}"
  exit $?
fi


# vim:set ft=sh
