#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'

includex "**.sh"

function shelob() {
  if [[ -n ${1:-} ]] ; then
    if [[ !  ${1} =~ ^__.* ]]; then
      local command="$1"
      shift 1
      "$command" "$@"
      return 0
    else
      error "Command not found: $1"
    fi
  else
    error "Missing command"
  fi
  echo "Usage: shelob <command> [<args>]"
  exit 1
}

if [[ ${BASH_SOURCE[0]} == "$0" ]]; then
  shelob "${@}"
fi

# vim:set ft=sh
